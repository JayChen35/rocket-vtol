<?xml version="1.0" ?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- 1st link -->>
    <link name="link_chassis">
        <pose>0.0 0.1 0 0 0</pose>

        <inertial>
            <mass value="5">
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <inertia ixx="0.039" ixy="0" ixz="0" iyy="0.106" iyz="0" izz="0.512">
        </inertial>

        <collision name="collision_chassis">
            <geometry>
                <box size="2 2 1"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="2 2 1"/>
            </geometry>
        </visual>
    </link>

</robot>